<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgapps2"
    tools:context=".Shipping.ChooseClothes">

    <LinearLayout
        android:id="@+id/linelayoutshipcloth"
        android:layout_width="match_parent"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/for15dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >


        <ImageButton
            android:contentDescription="backtoMix"
            android:id="@+id/imgarrow1"
            android:layout_width="47dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/leftarrow" />
        <TextView
            android:id="@+id/shipcloth"
            android:layout_width="wrap_content"
            android:fontFamily="@font/poppins"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Kaos"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/for5dp"
            android:layout_marginLeft="99dp"
            android:textSize="28sp"/>
    </LinearLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/grdlayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linelayoutshipcloth">

        <ImageButton
            android:id="@+id/imgbtncloth1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/abu"
            android:contentDescription="Kaos Polos Klikable"
            android:src="@drawable/bju1"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <ImageButton
            android:id="@+id/imgbtncloth2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/abu"
            android:contentDescription="Kaos Polos biru Klikable"
            android:src="@drawable/bju2"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <ImageButton
            android:id="@+id/imgbtncloth3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/abu"
            android:contentDescription="Kaos Merah Polos Klikable"
            android:src="@drawable/bju3"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <ImageButton
            android:id="@+id/imgbtncloth4"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/abu"
            android:contentDescription="kaos hitam Klikable"
            android:src="@drawable/bju4"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <ImageButton
            android:id="@+id/imgbtncloth5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/abu"
            android:contentDescription="kaos ijo polos Klikable"
            android:src="@drawable/bju5"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <ImageButton
            android:id="@+id/imgbtncloth6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/abu"
            android:contentDescription="kaos oren Klikable"
            android:src="@drawable/bju6"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="2"
            app:layout_rowWeight="1" />


    </androidx.gridlayout.widget.GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>